/* 页面整体布局 */
page{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 轮播图样式*/
swiper{
  width: 100%; 
  height: 300px; 
}

swiper-item image{
  width: 100%; 
  height: 300px;
}

/* 按钮样式 */
button{
  width: 80%; 
  margin-top: 20px; 
  padding: 10px 0; 
  background-color: #1AAD19; 
  color: white; 
  border: none; 
  border-radius: 5px;
}